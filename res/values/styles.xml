<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
<style name="TranslucentSplash" parent="Theme.AppCompat.NoActionBar">  
        <item name="android:colorPrimaryDark">@color/lffl10</item>
        <item name="android:navigationBarColor">@color/lffl10</item>
        <item name="android:colorAccent">@color/lffl10</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item> 
        <item name="android:windowIsTranslucent">true</item> 
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
</style>  

    <style name="Theme_lffl" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item> 
        <item name="android:windowActionBar">false</item> 
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimaryDark">@color/lffl3</item>
        <item name="android:colorPrimary">@color/lffl2</item>
        <item name="android:colorAccent">@color/lffl2</item> 
        <item name="android:textColorPrimary">@android:color/white</item>  
        <item name="popupTheme">@style/Theme.AppCompat.Light</item> 
    </style>
    
        <style name="Theme_lffl_article" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="android:windowActionBar">false</item> 
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimaryDark">@color/lffl5</item>
        <item name="android:colorPrimary">@color/lffl4</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>  
        <item name="android:colorAccent">@color/lffl4</item>  
        <item name="android:textColorPrimary">@android:color/white</item>  
        <item name="android:actionBarSize">56dp</item>
        <item name="android:displayOptions">showTitle</item>
         </style>
         
        <style name="ActionMode" parent="Widget.AppCompat.ActionMode"> 
    <item name="android:background">@color/lffl4</item> 
    </style>
    
        <style name="Theme_lffl_info" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item> 
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimaryDark">@color/lffl9</item>
        <item name="android:colorPrimary">@color/lffl8</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>  
        <item name="android:colorAccent">@color/lffl8</item>  
        <item name="android:textColorPrimary">@color/lffl7</item>  
        <item name="android:actionBarSize">56dp</item>
        <item name="android:displayOptions">showTitle</item>
        
    </style>
    
</resources>