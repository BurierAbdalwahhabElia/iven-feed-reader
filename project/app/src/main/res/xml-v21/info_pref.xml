<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.jenzz.materialpreference.PreferenceCategory android:title="@string/moreopts"/>

    <com.jenzz.materialpreference.SwitchPreference
        android:key="Theme"
        android:title="@string/pref_theme_title"
        android:summary="@string/themesum"
        android:icon="?attr/theme_icon"
        android:defaultValue="false" />

    <com.jenzz.materialpreference.SwitchPreference
        android:key="Navibar"
        android:title="@string/nav_color"
        android:summary="@string/nav_color_sum"
        android:icon="?attr/navtint_icon"
        android:defaultValue="false"
        tools:targetApi="21" />

    <com.jenzz.materialpreference.SwitchPreference
        android:key="WebViewLoad"
        android:title="@string/Reading"
        android:summary="@string/Readingsum"
        android:icon="?attr/webview_icon"
        android:defaultValue="false" />

    <com.jenzz.materialpreference.CheckBoxPreference
        android:key="JavaScriptLoad"
        android:title="@string/JS_script"
        android:summary="@string/JS_scriptsum"
        android:icon="?attr/js_icon"
        android:defaultValue="false" />

    <com.jenzz.materialpreference.Preference
        android:key="build_number"
        style="?android:preferenceInformationStyle"
        android:title="@string/build_number"
        android:summary=""/>

</PreferenceScreen>