<?xml version="1.0" encoding="utf-8"?>

<!-- Styles & themes -->

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Splash theme -->
    <style name="TranslucentSplash" parent="Theme.iven.custom">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Theme.iven.custom" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Theme for all activities-->
    <style name="Theme_iven" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@android:color/white</item>
        <item name="text_title_theme">@color/titles_color</item>
        <item name="text_date_theme">@color/subtitles_color</item>
        <item name="navview_text">@drawable/state_list</item>
        <item name="plus_icon">@drawable/ic_plus</item>
        <item name="theme_icon">@drawable/ic_invert_colors</item>
        <item name="webview_icon">@drawable/ic_webview</item>
        <item name="js_icon">@drawable/ic_js</item>
        <item name="navtint_icon">@drawable/ic_tint</item>
        <item name="textsize_icon">@drawable/ic_format_text</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorTextView</item>
        <item name="title_color">@color/titles_color</item>
        <item name="article_text_color">@color/titles_color</item>
        <item name="immersive_icon">@drawable/ic_fullscreen</item>
        <item name="back_icon">@drawable/ic_back</item>
        <item name="images_icon">@drawable/ic_image_area</item>
        <item name="share_icon">@drawable/ic_share</item>
        <item name="forward_icon">@drawable/ic_forward</item>
    </style>

    <!-- Dark theme for all activities-->
        <style name="Theme_iven_dark" parent="Theme.AppCompat.NoActionBar">
            <item name="android:windowNoTitle">true</item>
            <item name="colorPrimaryDark">@color/primary_dark</item>
            <item name="colorPrimary">@color/primary</item>
            <item name="colorAccent">@color/accent_color</item>
            <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
            <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
            <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
            <item name="theme_background">@color/theme_bg_dark</item>
            <item name="text_title_theme">@color/titles_color_dark</item>
            <item name="text_date_theme">@color/subtitles_color_dark</item>
            <item name="navview_text">@drawable/state_list_dark</item>
            <item name="plus_icon">@drawable/ic_plus_dark</item>
            <item name="theme_icon">@drawable/ic_invert_colors_dark</item>
            <item name="webview_icon">@drawable/ic_webview_dark</item>
            <item name="js_icon">@drawable/ic_js_dark</item>
            <item name="navtint_icon">@drawable/ic_tint_dark</item>
            <item name="textsize_icon">@drawable/ic_format_text_dark</item>
            <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
            <item name="android:listSeparatorTextViewStyle">@style/ListSeparatorTextView</item>
            <item name="title_color">@color/titles_color_dark</item>
            <item name="article_text_color">@color/titles_color_dark</item>
            <item name="immersive_icon">@drawable/ic_fullscreen_dark</item>
            <item name="back_icon">@drawable/ic_back_dark</item>
            <item name="images_icon">@drawable/ic_image_area_dark</item>
            <item name="share_icon">@drawable/ic_share_dark</item>
            <item name="forward_icon">@drawable/ic_forward_dark</item>
        </style>

    <!-- Responsive toolbar -->
    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">

        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_h_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_h_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
     </style>

     <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
         <item name="android:minWidth">48dp</item>
     </style>

     <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
         <item name="android:paddingLeft">0dp</item>
         <item name="android:paddingRight">0dp</item>
     </style>

    <!-- Preference category theme -->
    <style name="ListSeparatorTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Fab button color -->
    <style name="FloatingAccentButtonOverlay" >
        <item name="colorAccent">@color/fab_primary</item>
    </style>

    <!-- Share and continue reading buttons theme -->
    <style name="ActionButtonIcon">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple</item>

    </style>

    <!-- Share and continue reading text appearance -->
    <style name="ActionButtonText" parent="@style/PlainText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/article_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>
    <style name="PlainText" />
 </resources>