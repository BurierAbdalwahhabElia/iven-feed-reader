<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

<style name="TranslucentSplash" parent="Theme.Lffl.custom">
        <item name="android:windowBackground">@drawable/background_splash</item>
</style>

    <style name="Theme.Lffl.custom" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme_lffl" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/lffl5</item>
        <item name="colorPrimary">@color/lffl4</item>
        <item name="colorAccent">@color/lffl4</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@android:color/white</item>
        <item name="text_title_theme">@color/text_title</item>
        <item name="text_date_theme">@color/text_date</item>
        <item name="navview_text">@drawable/state_list</item>
        <item name="popup_theme">@style/Theme.Popup</item>
    </style>

    <style name="Theme_lffl_dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/lffl5</item>
        <item name="colorPrimary">@color/lffl4</item>
        <item name="colorAccent">@color/lffl4</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@color/lffl14</item>
        <item name="text_title_theme">@color/text_title_dark</item>
        <item name="text_date_theme">@color/text_date_dark</item>
        <item name="navview_text">@drawable/state_list_dark</item>
        <item name="popup_theme">@style/Theme.Popup.Dark</item>
    </style>
    
        <style name="Theme_lffl_article" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/lffl3</item>
        <item name="colorPrimary">@color/lffl2</item>
        <item name="colorAccent">@color/lffl2</item>
        <item name="title_color">@color/lffl9</item>
        <item name="article_text_color">@color/article_text_dark_grey</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@android:color/white</item>
         </style>

    <style name="Theme_lffl_article_dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/lffl3</item>
        <item name="colorPrimary">@color/lffl2</item>
        <item name="colorAccent">@color/lffl2</item>
        <item name="title_color">@color/lffl10</item>
        <item name="article_text_color">@color/lffl11</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@color/lffl14</item>
    </style>

        <style name="Theme_lffl_info" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/lffl7</item>
        <item name="colorPrimary">@color/lffl6</item>
        <item name="colorAccent">@color/lffl6</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@android:color/white</item>
        <item name="theme_icon">@drawable/ic_invert_colors</item>
        <item name="webview_icon">@drawable/ic_webview</item>
        <item name="js_icon">@drawable/ic_js</item>
        <item name="navtint_icon">@drawable/ic_tint</item>
        <item name="immersive_icon">@drawable/ic_fullscreen</item>
        <item name="version_icon">@drawable/ic_version</item>
    </style>

    <style name="Theme_lffl_info_dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/lffl7</item>
        <item name="colorPrimary">@color/lffl6</item>
        <item name="colorAccent">@color/lffl6</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleDark</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@color/lffl14</item>
        <item name="theme_icon">@drawable/ic_invert_colors_dark</item>
        <item name="webview_icon">@drawable/ic_webview_dark</item>
        <item name="js_icon">@drawable/ic_js_dark</item>
        <item name="navtint_icon">@drawable/ic_tint_dark</item>
        <item name="immersive_icon">@drawable/ic_fullscreen_dark</item>
        <item name="version_icon">@drawable/ic_version_dark</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/lffl8</item>
        <item name="colorAccent">@color/lffl6</item>
    </style>

    <style name="AppCompatAlertDialogStyleDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/lffl13</item>
        <item name="android:background">@color/lffl14</item>
        <item name="colorAccent">@color/lffl6</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">

        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_h_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_h_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
        <item name="android:textColorPrimary">@color/textcolorPrimary</item>
        <item name="android:textColorSecondary">@color/textcolorSecondary</item>
    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Theme.Popup.Dark" parent="Theme.AppCompat">
    </style>

    <style name="Theme.Popup" parent="Theme.AppCompat.Light">
    </style>

</resources>