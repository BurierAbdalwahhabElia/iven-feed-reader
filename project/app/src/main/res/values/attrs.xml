<?xml version="1.0" encoding="utf-8"?>

<!-- we use attr references to set resources depending of the theme selected-->
<!-- how? -->

<!-- for example: to change the info activity background on light/dark theme (see: activity_pref) -->
<!-- we create new reference here, e.g. theme_background -->
<!-- and we set the background in this way -->
<!-- android:background="?attr/theme_background" -->
<!-- then we are going to set the color or the drawable for the attr inside the theme of the activity (styles)-->
<!-- For info activity the light/dark themes are: Theme_iven_info and Theme_iven_info_dark -->
<!-- So we will add <item name="theme_background">@color/iven14</item> -->

<resources>

    <attr name="title_color" format="color"/>
    <attr name="article_text_color" format="color"/>
    <attr name="theme_background" format="color"/>
    <attr name="theme_icon" format="reference"/>
    <attr name="webview_icon" format="reference"/>
    <attr name="js_icon" format="reference"/>
    <attr name="text_title_theme" format="reference"/>
    <attr name="text_date_theme" format="reference"/>
    <attr name="navview_text" format="reference"/>
    <attr name="popup_theme" format="reference"/>
    <attr name="navtint_icon" format="reference"/>
    <attr name="immersive_icon" format="reference"/>
    <attr name="version_icon" format="reference"/>
    <attr name="textsize_icon" format="reference"/>
    <attr name="plus_icon" format="reference"/>
    <attr name="share_icon" format="reference"/>
    <attr name="forward_icon" format="reference"/>
</resources>