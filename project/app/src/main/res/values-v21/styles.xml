<?xml version="1.0" encoding="utf-8"?>

<!-- Styles & themes for api21 -->

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- List activity light theme -->
    <style name="Theme_iven" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">@color/iven5</item>
        <item name="colorPrimary">@color/iven4</item>
        <item name="colorAccent">@color/iven4</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@android:color/white</item>
        <item name="text_title_theme">@color/text_title</item>
        <item name="text_date_theme">@color/text_date</item>
        <item name="navview_text">@drawable/state_list</item>
        <item name="plus_icon">@drawable/ic_plus</item>
    </style>

    <!-- List activity dark theme -->
    <style name="Theme_iven_dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">@color/iven5</item>
        <item name="colorPrimary">@color/iven4</item>
        <item name="colorAccent">@color/iven4</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="theme_background">@color/iven14</item>
        <item name="text_title_theme">@color/text_title_dark</item>
        <item name="text_date_theme">@color/text_date_dark</item>
        <item name="navview_text">@drawable/state_list_dark</item>
        <item name="plus_icon">@drawable/ic_plus_dark</item>
    </style>

</resources>