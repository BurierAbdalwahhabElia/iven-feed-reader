<?xml version="1.0" encoding="utf-8"?>

<!-- this is the layout for navigation view -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_height"
    android:background="@color/nv_bg_color"
    android:orientation="vertical">

    <!-- rss image-->
    <ImageView
        android:contentDescription="@string/desc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/rss"
        android:scaleType="fitCenter"
        android:gravity="center"
        android:layout_gravity="center_horizontal|center_vertical"/>

    <!-- the app's name-->
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|start"
    android:text="@string/app_name"
    android:layout_marginBottom="@dimen/first_keyline"
    android:layout_marginStart="@dimen/first_keyline"
    android:layout_marginLeft="@dimen/first_keyline"
    android:textSize="14sp"
    android:gravity="bottom"
    android:textColor="@android:color/white"
    android:textStyle="bold"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

</FrameLayout>