<?xml version="1.0" encoding="utf-8"?>

<!-- this is the layout for the right-to-left navigation drawer containing the dynamic listview-->
<!-- with elevation (for >= lollipop devices)-->

<!-- the drawer-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="end"
    android:gravity="end"
    android:elevation="6dp"
    android:background="?attr/theme_background">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:clipToPadding="false">

          <include layout="@layout/toolbar2" />

          <!-- the dynamic listview-->
              <ListView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/listfeed" />

      </LinearLayout>

  </android.support.v4.widget.DrawerLayout>