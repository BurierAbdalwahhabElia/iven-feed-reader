<?xml version="1.0" encoding="utf-8"?>

<!-- this is the layout for the right-to-left navigation drawer containing the dynamic listview-->
<!-- with elevation (for >= lollipop devices)-->

<!-- the drawer-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="end"
    android:gravity="end"
    android:elevation="6dp"
    android:background="?attr/theme_background">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <!-- the dynamic listview-->
              <ListView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/listfeed" />

              <!-- the fab button-->
              <com.melnykov.fab.FloatingActionButton
                  android:id="@+id/fab"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom|right"
                  android:gravity="bottom|right"
                  android:layout_margin="16dp"
                  android:src="?attr/plus_icon"
                  fab:fab_colorNormal="@color/fab_primary"
                  fab:fab_colorPressed="@color/fab_pressed"
                  fab:fab_colorRipple="@color/fab_ripple" />
          </FrameLayout>

      </RelativeLayout>

  </android.support.v4.widget.DrawerLayout>