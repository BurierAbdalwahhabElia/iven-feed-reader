<?xml version="1.0" encoding="utf-8"?>

<!-- this is the layout for the left-to-right navigation drawer containing the built-in feeds-->
<!-- and other menu options-->
<!-- with elevation (for >= lollipop devices)-->

<!-- the drawer-->
<android.support.v4.widget.DrawerLayout
  android:id="@+id/drawer_layout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fitsSystemWindows="true"
  android:elevation="6dp"
  android:background="?attr/theme_background">
  
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
        
    <include layout="@layout/toolbar" />

      <!-- swipe to refresh-->
      <android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

          <!-- the main listview-->
          <ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/list" />

</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>

    <!-- the navigation view-->
    <android.support.design.widget.NavigationView
    android:id="@+id/navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/drawer_header"
    app:itemIconTint="?attr/navview_text"
    app:itemTextColor="?attr/navview_text"
    app:menu="@menu/drawer"
    android:background="?attr/theme_background"/>

    <!-- the right-to-left drawer layout containing the dynamic listview-->
    <include layout="@layout/dynamic_list" />

</android.support.v4.widget.DrawerLayout>