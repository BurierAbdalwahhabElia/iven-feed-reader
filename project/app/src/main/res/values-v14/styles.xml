<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
        <style name="Theme_lffl_article" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/lffl2</item>
        <item name="android:windowActionBar">false</item> 
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/lffl3</item>
        <item name="colorPrimary">@color/lffl2</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>  
        <item name="colorAccent">@color/lffl2</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="dotted_divider">@drawable/horizontal_divider</item>
        <item name="title_color">@color/lffl9</item>
        <item name="android:textColorHighlight">@color/lffl9</item>
         </style>

    <style name="Theme_lffl_article_dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/lffl2</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/lffl3</item>
        <item name="colorPrimary">@color/lffl2</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="popupTheme">@style/Theme.AppCompat</item>
        <item name="colorAccent">@color/lffl2</item>
        <item name="android:actionBarSize">56dp</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="dotted_divider">@drawable/horizontal_divider_dark</item>
        <item name="title_color">@color/lffl10</item>
        <item name="android:textColorHighlight">@color/lffl9</item>
    </style>

</resources>